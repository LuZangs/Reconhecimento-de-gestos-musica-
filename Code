import cv2
import mediapipe as mp
import pyautogui
import time

mp_hands = mp.solutions.hands
mp_draw = mp.solutions.drawing_utils

hands = mp_hands.Hands(
    max_num_hands=1,
    min_detection_confidence=0.7,
    min_tracking_confidence=0.7
)

cap = cv2.VideoCapture(0, cv2.CAP_DSHOW)

x_anterior = None
LIMIAR = 0.12
COOLDOWN = 1.2
ultimo_gesto = 0

while True:
    ret, frame = cap.read()
    if not ret:
        break

    frame = cv2.flip(frame, 1)  # espelha (fica natural)
    frame_rgb = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
    result = hands.process(frame_rgb)

    if result.multi_hand_landmarks:
        for hand_landmarks in result.multi_hand_landmarks:
            mp_draw.draw_landmarks(
                frame,
                hand_landmarks,
                mp_hands.HAND_CONNECTIONS
            )

            # Ponta do dedo indicador
            indicador = hand_landmarks.landmark[8]
            x_atual = indicador.x

            if x_anterior is not None:
                movimento = x_atual - x_anterior
                agora = time.time()

                if agora - ultimo_gesto > COOLDOWN:
                    if movimento > LIMIAR:
                        print("Próxima música")
                        pyautogui.press("nexttrack")
                        ultimo_gesto = agora

                    elif movimento < -LIMIAR:
                        print("⏮ Música anterior")
                        pyautogui.press("prevtrack")
                        ultimo_gesto = agora

            x_anterior = x_atual

    cv2.imshow("Controle de Música por Gesto", frame)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
